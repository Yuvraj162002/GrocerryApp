<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ecommerce.android.grocerryapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GrocerryApp">
        <activity
            android:name=".activities.PlacedOrderActivity"
            android:exported="true" />
        <activity
            android:name=".activities.SecondCategoryActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ProductDeatiledActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activities.ViewAllActivity"
            android:exported="true" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            />
        </activity>
        <activity
            android:name=".activities.RegistartionActivity"
            android:label="Registartion"
            android:parentActivityName=".activities.WelcomeActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:label="Login"
            android:parentActivityName=".activities.WelcomeActivity" />
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>