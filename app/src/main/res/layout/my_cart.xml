<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:elevation="3dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/neon_green"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal">

       <TextView
           android:id="@+id/mycart_name1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textSize="15sp"
           android:textStyle="bold"
           android:fontFamily="@font/alice"
           android:text="Product Name"/>

        <TextView
            android:id="@+id/mycart_name11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/alice"
            android:text="Product Name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/mycart_price1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="1"
            android:fontFamily="@font/alice"/>

        <TextView
            android:id="@+id/mycart_price11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/alice"
            android:text="Product Price"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/mycart_date1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Date"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="1"
            android:fontFamily="@font/alice"/>

        <TextView
            android:id="@+id/mycart_date11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/alice"
            android:text="Current Date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/mycart_time1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Time"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="1"
            android:fontFamily="@font/alice"/>

        <TextView
            android:id="@+id/mycart_time11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/alice"
            android:text="Current Time"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/mycart_totalprice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="1"
            android:fontFamily="@font/alice"/>

        <TextView
            android:id="@+id/mycart_totalprice11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/alice"
            android:text="Total Price"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/mycart_quantity1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Quantity"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="1"
            android:fontFamily="@font/alice"/>

        <TextView
            android:id="@+id/mycart_quantity11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/alice"
            android:text="Total Quantity"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/delete_my_cart"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/delete"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"/>

</LinearLayout>
</androidx.cardview.widget.CardView>