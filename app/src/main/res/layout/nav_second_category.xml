<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_margin="3dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="5dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/img_second_cat"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="center"
            android:layout_margin="5dp"

            android:src="@drawable/eggs"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_second_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice"
                android:text="Name is here"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/price_second_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice"
                android:layout_marginTop="5dp"
                android:text="Price"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/add_item_second_category"
                android:layout_width="35dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/plusicon" />

            <TextView
                android:id="@+id/quantity_second_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/remove_second_item"
                android:layout_width="36dp"
                android:layout_height="54dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/iconminus"
                 />

            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_to_cart_second_cat"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Buy Now"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:background="@drawable/datailed_text"
               />

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>